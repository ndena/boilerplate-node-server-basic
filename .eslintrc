{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "rules": {
    "indent": "off",
    "no-console": "off",
    "semi": [2, "never"],
    "arrow-parens": [2, "as-needed"],
    "global-require": [0],
    "import/first": [0],
    "class-methods-use-this": [0],
    "no-use-before-define": ["error", { "functions": false, "classes": true }],
    "max-len": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "src"
        ]
      }
    }
  },
  "env": {
    "mocha": true,
    "jest/globals": true
  },
  "plugins": ["jest"]
}
